<h2>Registrace</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: 'Jméno', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Příjmení', required: true %>
    <%= f.input :email, label: 'Email', required: true %>
    <%= f.input :password, label: 'Heslo', required: true, hint: ("#{@minimum_password_length} znaků je minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: 'Potvrzení hesla', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrovat se" %>
  </div>
<% end %>

