<div class="form-wrapper">
  <div class="form-login col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-title">
        <h3>Přihlášení do systému</h3>
      </div>
      <hr>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: "Emailová adresa", required: false, autofocus: true %>
          <%= f.input :password, label: "Heslo", required: false %>
          <%= f.input :remember_me, label: "Zapamatuj si mě", as: :boolean if devise_mapping.rememberable? %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "Přihlásit se", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <br>
      <% end %>
      <div class="form-links">
        <%= render "users/shared/links" %>
      </div>
  </div>
</div>
      
