<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :addressable %>
    <%= f.input :residence %>
    <%= f.input :street %>
    <%= f.input :street_number %>
    <%= f.input :city %>
    <%= f.input :zip_code %>
    <%= f.input :state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
