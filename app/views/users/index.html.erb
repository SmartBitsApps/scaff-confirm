
<%- model_class = User -%>
<div class="page-header">
  <h1>Přehled všech uživatelů</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Jméno</th>
      <th>Email</th>
      <th>Registrace</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <%#= link_to user_path(user) do %>
        <tr>
          <td class="link" data-link="<%= user_path(user, :format => 'html') %>" ><%= user.first_name + " " + user.last_name %></td>
          <td class="link" data-link="<%= user_path(user, :format => 'html') %>" ><%= user.email %></td>
          <td class="link" data-link="<%= user_path(user, :format => 'html') %>" ><%= user.created_at %></td>
          
          <td>
            <%= link_to user_path(user), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
              <%= glyph 'info-sign' %>
            <%- end -%>
            <%= link_to edit_user_path(user), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
              <%= glyph 'pencil' %>
            <%- end -%>
            <%= link_to user_path(user), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
              <%= glyph 'remove' %>
            <%- end -%>
          </td>
          
        </tr>
      <%# end %>
    <% end %>
  </tbody>
</table>

<%#= link_to "Uložit",
            new_user_path,
            class: 'btn btn-primary' %>

<script>
  $(document).ready(function() {
    $("td.link").click(function() {
     window.location = $(this).data("link");    
    })
  })
</script>