<p id="notice"><%= notice %></p>

<h1>Přehled všech uživatelských účtů</h1>
<br><br>
<table>
  <thead>
    <tr>
      <th>Jméno</th>
      <th>Rodné příjmení</th>
      <th>Datum narození</th>
      <th>Pohlaví</th>
      <th>Místo narození</th>
      <th>Rodné číslo</th>
      <th>Národnost</th>
      <th>Rodinný stav</th>
      <th>Bankovní účet</th>
      <th>Pojišťovna</th>
      <th>Podmínky</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.user.full_name %></td>
        <td><%= account.birth_name %></td>
        <td><%= account.birth_date %></td>
        <td><%= account.gender %></td>
        <td><%= account.birth_place %></td>
        <td><%= account.birth_number %></td>
        <td><%= account.nationality %></td>
        <td><%= account.family_status %></td>
        <td><%= account.bank_acc %></td>
        <td><%= account.insurance %></td>
        <td><%= account.terms %></td>
        <td><%= link_to 'Detail', account %></td>
        <td><%= link_to 'Upravit', edit_account_path(account) %></td>
        <td><%= link_to 'Smazat', account, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
